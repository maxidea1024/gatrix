{
    "name": "@gatrix/shared",
    "version": "1.0.0",
    "description": "Shared types, constants, and utilities for Gatrix packages",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "import": "./dist/index.js",
            "require": "./dist/index.js",
            "types": "./dist/index.d.ts"
        },
        "./errors": {
            "import": "./dist/errors/index.js",
            "require": "./dist/errors/index.js",
            "types": "./dist/errors/index.d.ts"
        }
    },
    "files": [
        "dist",
        "src"
    ],
    "scripts": {
        "build": "tsc",
        "watch": "tsc --watch",
        "clean": "rimraf dist"
    },
    "devDependencies": {
        "typescript": "^5.0.0",
        "rimraf": "^5.0.0"
    }
}