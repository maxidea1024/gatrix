{
  "name": "@gatrix/chat-server",
  "version": "1.0.0",
  "description": "Gatrix Chat Server - Real-time messaging service",
  "main": "dist/index.js",
  "scripts": {
    "dev": "yarn migrate:safe && nodemon src/index.ts",
    "dev:no-migrate": "nodemon src/index.ts",
    "build": "tsc",
    "start": "yarn migrate:safe && node dist/index.js",
    "start:no-migrate": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "migrate": "knex migrate:latest",
    "migrate:with-lock": "ts-node src/database/migrate-with-lock.ts",
    "migrate:safe": "ts-node src/database/migrate-with-lock.ts || echo 'Migration failed but continuing...'",
    "migrate:rollback": "knex migrate:rollback",
    "seed": "knex seed:run"
  },
  "keywords": [
    "chat",
    "websocket",
    "socket.io",
    "real-time",
    "messaging"
  ],
  "author": "Gatrix Team",
  "license": "MIT",
  "dependencies": {
    "@keyv/redis": "^5.1.2",
    "@socket.io/redis-adapter": "^8.2.1",
    "@types/cheerio": "^0.22.35",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "cheerio": "^1.1.2",
    "compression": "^1.7.4",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "keyv": "^5.5.2",
    "knex": "^3.1.0",
    "lodash": "^4.17.21",
    "lru-cache": "^7.18.3",
    "msgpackr": "^1.10.1",
    "multer": "^1.4.5-lts.1",
    "mysql2": "^3.15.0",
    "node-cron": "^3.0.3",
    "objection": "^3.1.3",
    "prom-client": "^13.2.0",
    "rate-limiter-flexible": "^2.4.2",
    "socket.io": "^4.7.5",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^5.0.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/compression": "^1.7.5",
    "@types/cookie-parser": "^1.4.6",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/lodash": "^4.14.202",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.4",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=22.0.0",
    "npm": ">=8.0.0"
  }
}
