{
  "watch": ["src"],
  "ext": "ts",
  "ignore": [
    "**/*.test.ts",
    "**/*.spec.ts",
    "**/*.log",
    "**/logs/**",
    "**/dist/**",
    "**/node_modules/**",
    "**/uploads/**",
    "**/cms/**",
    "**/.git/**"
  ],
  "exec": "ts-node --transpile-only src/index.ts",
  "env": {
    "NODE_ENV": "development"
  },
  "legacyWatch": true,
  "delay": "3000",
  "verbose": true
}
