# Environment
NODE_ENV=development
PORT=5000

# Database
DB_HOST=localhost
DB_PORT=3306
DB_NAME=gatrix
DB_USER=gatrix_user
DB_PASSWORD=gatrix_password

# Redis (for caching and BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# BullMQ Queue Configuration
QUEUE_CONCURRENCY=5
QUEUE_REMOVE_ON_COMPLETE=100
QUEUE_REMOVE_ON_FAIL=50
QUEUE_MAX_ATTEMPTS=3

# API Token Usage Tracking
API_TOKEN_SYNC_INTERVAL_MS=60000

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Session
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# OAuth (optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Admin user (for seeding)
ADMIN_EMAIL=admin@garix.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Administrator

# CORS
CORS_ORIGIN=http://localhost:3000

# Chat Server
CHAT_SERVER_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_AUTH_WINDOW_MS=900000
RATE_LIMIT_AUTH_MAX_REQUESTS=5

# Default Language
DEFAULT_LANGUAGE=ko

# Email Configuration
# Option 1: SendGrid (recommended for production)
SENDGRID_API_KEY=your-sendgrid-api-key
SENDGRID_FROM=Gatrix <noreply@yourdomain.com>
SENDGRID_VERIFIED_SENDER=noreply@yourdomain.com

# Option 2: SMTP (Gmail or other SMTP providers)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-gmail@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=Gatrix <your-gmail@gmail.com>
