FROM node:22-alpine AS base

# Install dependencies for development
FROM base AS development
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
    git \
    python3 \
    make \
    g++

# Copy package files
COPY package.json yarn.lock* ./
COPY packages/backend/package.json ./packages/backend/
COPY packages/sdks/server-sdk/package.json ./packages/sdks/server-sdk/

# Install all dependencies (including dev dependencies)
RUN yarn install --frozen-lockfile

# Copy source code
COPY packages/backend ./packages/backend
COPY packages/sdks/server-sdk ./packages/sdks/server-sdk

# Build server-sdk (required because main points to dist/index.js)
RUN cd packages/sdks/server-sdk && yarn install && yarn build

# Create logs directory in backend package
RUN mkdir -p packages/backend/logs

# Note: Running as root in development for volume mount permissions
# In production, use non-root user

# Expose ports
EXPOSE 5000 9229

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD node -e "require('http').get('http://localhost:5000/health', (res) => { process.exit(res.statusCode === 200 ? 0 : 1) })"

# Default command (can be overridden)
CMD ["npm", "run", "dev"]

