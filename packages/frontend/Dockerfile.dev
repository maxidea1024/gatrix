FROM node:22-alpine AS base

# Install dependencies for development
FROM base AS development
WORKDIR /app

# Install system dependencies
RUN apk add --no-cache \
  git \
  python3 \
  make \
  g++

# Use Tencent npm mirror for faster downloads in China
RUN yarn config set registry http://mirrors.cloud.tencent.com/npm/

# Copy package files
COPY package.json yarn.lock* ./
COPY packages/frontend/package.json ./packages/frontend/
COPY packages/shared/package.json ./packages/shared/

# Install all dependencies (including dev dependencies)
RUN yarn install --frozen-lockfile --network-timeout 600000

# Rebuild esbuild to fix binary version mismatch
RUN cd /app/packages/frontend && npm rebuild esbuild

# Copy source code
COPY packages/frontend ./packages/frontend

# Increase Node.js heap size for development server to prevent out of memory errors
ENV NODE_OPTIONS="--max-old-space-size=4096"

# Switch to non-root user
USER node

# Expose port
EXPOSE 3000

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://127.0.0.1:3000/ || exit 1

# Default command (can be overridden)
CMD ["npm", "run", "dev"]
