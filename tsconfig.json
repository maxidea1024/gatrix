{
  "compilerOptions": {
    "target": "ES2022",
    "lib": [
      "ES2022"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": ".",
    "paths": {
      "@backend/*": [
        "packages/backend/src/*"
      ],
      "@frontend/*": [
        "packages/frontend/src/*"
      ],
      "@shared/*": [
        "packages/shared/src/*"
      ]
    },
    "incremental": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  },
  "include": [
    "packages/*/src/**/*",
    "packages/*/types/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build"
  ]
}