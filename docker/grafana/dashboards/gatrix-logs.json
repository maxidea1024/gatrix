{
  "uid": "gatrix-logs",
  "title": "Gatrix Logs",
  "tags": ["gatrix", "logs"],
  "timezone": "browser",
  "schemaVersion": 38,
  "version": 1,
  "refresh": "10s",
  "style": "dark",
  "time": {
    "from": "now-1h",
    "to": "now"
  },
  "templating": {
    "list": [
      {
        "name": "source_category",
        "type": "query",
        "datasource": "Loki",
        "label": "Source Category",
        "query": {
          "queryType": "label_values",
          "label": "source_category"
        },
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      },
      {
        "name": "service",
        "type": "query",
        "datasource": "Loki",
        "label": "Service",
        "query": {
          "queryType": "label_values",
          "label": "service"
        },
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      },
      {
        "name": "group",
        "type": "query",
        "datasource": "Loki",
        "label": "Group",
        "query": {
          "queryType": "label_values",
          "label": "group"
        },
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      },
      {
        "name": "level",
        "type": "query",
        "datasource": "Loki",
        "label": "Level",
        "query": {
          "queryType": "label_values",
          "label": "level"
        },
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      },
      {
        "name": "hostname",
        "type": "query",
        "datasource": "Loki",
        "label": "Hostname",
        "query": "label_values(hostname)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      },
      {
        "name": "internalIp",
        "type": "query",
        "datasource": "Loki",
        "label": "Internal IP",
        "query": "label_values(internalIp)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      },
      {
        "name": "externalIp",
        "type": "query",
        "datasource": "Loki",
        "label": "External IP",
        "query": "label_values(externalIp)",
        "refresh": 2,
        "includeAll": true,
        "allValue": ".*",
        "multi": true
      },
      {
        "name": "userId",
        "type": "textbox",
        "label": "User ID",
        "query": ""
      },
      {
        "name": "search",
        "type": "textbox",
        "label": "Search (message, url, method, etc.)",
        "query": ""
      }
    ]
  },
  "panels": [
    {
      "id": 2,
      "type": "timeseries",
      "title": "Log volume by level",
      "datasource": "Loki",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (logLevel) (count_over_time({job=\"gatrix\", service=~\"$service\", group=~\"$group\", level=~\"$level\", source_category=~\"$source_category\"} | json | hostname=~\"$hostname\" | internalIp=~\"$internalIp\" | externalIp=~\"$externalIp\" |~ \"(?i)$userId\" | label_format logLevel=\"{{.level}}\" | line_format \"{{.}}\" |~ \"(?i)$search\" [1m]))",
          "queryType": "range",
          "legendFormat": "{{logLevel}}",
          "step": "15s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "fillOpacity": 70,
            "gradientMode": "none",
            "lineWidth": 1,
            "pointSize": 5,
            "showPoints": "never",
            "spanNulls": true,
            "stacking": {
              "mode": "normal",
              "group": "A"
            }
          }
        },
        "overrides": [
          {
            "matcher": {
              "id": "byName",
              "options": "error"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "red"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "warn"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "orange"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "info"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "blue"
                }
              }
            ]
          },
          {
            "matcher": {
              "id": "byName",
              "options": "debug"
            },
            "properties": [
              {
                "id": "color",
                "value": {
                  "mode": "fixed",
                  "fixedColor": "green"
                }
              }
            ]
          }
        ]
      },
      "options": {
        "legend": {
          "showLegend": true,
          "placement": "bottom",
          "displayMode": "list"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      },
      "gridPos": {
        "h": 4,
        "w": 12,
        "x": 0,
        "y": 0
      }
    },
    {
      "id": 3,
      "type": "timeseries",
      "title": "Error logs per service",
      "datasource": "Loki",
      "targets": [
        {
          "refId": "A",
          "expr": "sum by (service) (count_over_time({job=\"gatrix\", service=~\"$service\", group=~\"$group\", source_category=~\"$source_category\"} | json | level=~\"error|fatal\" | hostname=~\"$hostname\" | internalIp=~\"$internalIp\" | externalIp=~\"$externalIp\" |~ \"(?i)$userId\" | line_format \"{{.}}\" |~ \"(?i)$search\" [1m]))",
          "queryType": "range",
          "legendFormat": "{{service}}",
          "step": "30s"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "short",
          "color": {
            "mode": "palette-classic"
          },
          "custom": {
            "drawStyle": "line",
            "lineInterpolation": "linear",
            "barAlignment": 0,
            "fillOpacity": 40,
            "gradientMode": "none",
            "lineWidth": 1,
            "pointSize": 4,
            "showPoints": "never",
            "spanNulls": true,
            "stacking": {
              "mode": "normal",
              "group": "A"
            }
          }
        },
        "overrides": []
      },
      "options": {
        "legend": {
          "showLegend": true,
          "placement": "bottom",
          "displayMode": "list"
        },
        "tooltip": {
          "mode": "multi",
          "sort": "none"
        }
      },
      "gridPos": {
        "h": 4,
        "w": 12,
        "x": 12,
        "y": 0
      }
    },
    {
      "type": "logs",
      "title": "Logs",
      "id": 1,
      "gridPos": {
        "h": 42,
        "w": 24,
        "x": 0,
        "y": 4
      },
      "datasource": "Loki",
      "targets": [
        {
          "refId": "A",
          "expr": "{job=\"gatrix\", service=~\"$service\", group=~\"$group\", level=~\"$level\", source_category=~\"$source_category\"} | json | json responseBody=\"responseBody\", queryParams=\"queryParams\" | hostname=~\"$hostname\" | internalIp=~\"$internalIp\" | externalIp=~\"$externalIp\" |~ \"(?i)$userId\" | line_format `{{if .service}}[{{.service}}]{{end}} {{or .message __line__}}` |~ \"(?i)$search\"",
          "queryType": "range"
        }
      ],
      "fieldConfig": {
        "defaults": {},
        "overrides": []
      },
      "options": {
        "showTime": true,
        "showLabels": false,
        "showCommonLabels": false,
        "wrapLogMessage": true,
        "prettifyLogMessage": false,
        "enableLogDetails": true,
        "dedupStrategy": "none",
        "sortOrder": "Descending"
      }
    }
  ]
}
