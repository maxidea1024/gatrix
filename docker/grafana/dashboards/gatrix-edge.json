{
  "uid": "gatrix-edge",
  "title": "Gatrix Edge Server",
  "timezone": "browser",
  "schemaVersion": 39,
  "version": 1,
  "refresh": "10s",
  "tags": ["gatrix", "edge", "nodejs"],
  "templating": {
    "list": [
      {
        "name": "window",
        "type": "custom",
        "query": "1m,5m,15m,30m,1h",
        "current": { "text": "5m", "value": "5m", "selected": true }
      }
    ]
  },
  "panels": [
    {
      "id": 1,
      "type": "stat",
      "title": "SDK Status",
      "datasource": "Prometheus",
      "targets": [{ "expr": "edge_sdk_initialized", "refId": "A" }],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            { "type": "value", "options": { "0": { "text": "Not Initialized", "color": "red" } } },
            { "type": "value", "options": { "1": { "text": "Initialized", "color": "green" } } }
          ]
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 4, "h": 4 }
    },
    {
      "id": 2,
      "type": "stat",
      "title": "Requests/sec",
      "datasource": "Prometheus",
      "targets": [{ "expr": "sum(rate(edge_http_requests_total[$window]))", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "reqps" } },
      "gridPos": { "x": 4, "y": 0, "w": 4, "h": 4 }
    },
    {
      "id": 3,
      "type": "stat",
      "title": "P95 Latency",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.95, sum by (le)(rate(edge_http_request_duration_seconds_bucket[$window])))",
          "refId": "A"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "x": 8, "y": 0, "w": 4, "h": 4 }
    },
    {
      "id": 4,
      "type": "stat",
      "title": "Memory Usage",
      "datasource": "Prometheus",
      "targets": [{ "expr": "process_resident_memory_bytes{job=\"gatrix-edge\"}", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "bytes" } },
      "gridPos": { "x": 12, "y": 0, "w": 4, "h": 4 }
    },
    {
      "id": 5,
      "type": "gauge",
      "title": "Cache Hit Rate",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum(rate(edge_cache_hits_total[$window])) / (sum(rate(edge_cache_hits_total[$window])) + sum(rate(edge_cache_misses_total[$window]))) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "min": 0,
          "max": 100,
          "thresholds": {
            "steps": [
              { "value": 0, "color": "red" },
              { "value": 50, "color": "yellow" },
              { "value": 90, "color": "green" }
            ]
          }
        }
      },
      "gridPos": { "x": 16, "y": 0, "w": 4, "h": 4 }
    },
    {
      "id": 6,
      "type": "stat",
      "title": "Event Loop Lag",
      "datasource": "Prometheus",
      "targets": [{ "expr": "nodejs_eventloop_lag_seconds{job=\"gatrix-edge\"}", "refId": "A" }],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "x": 20, "y": 0, "w": 4, "h": 4 }
    },
    {
      "id": 7,
      "type": "timeseries",
      "title": "Requests per Second (by Path)",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (path)(rate(edge_http_requests_total[$window]))",
          "refId": "A",
          "legendFormat": "{{path}}"
        }
      ],
      "gridPos": { "x": 0, "y": 4, "w": 12, "h": 8 }
    },
    {
      "id": 8,
      "type": "timeseries",
      "title": "Request Latency by Percentile",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum by (le)(rate(edge_http_request_duration_seconds_bucket[$window])))",
          "refId": "A",
          "legendFormat": "p50"
        },
        {
          "expr": "histogram_quantile(0.90, sum by (le)(rate(edge_http_request_duration_seconds_bucket[$window])))",
          "refId": "B",
          "legendFormat": "p90"
        },
        {
          "expr": "histogram_quantile(0.95, sum by (le)(rate(edge_http_request_duration_seconds_bucket[$window])))",
          "refId": "C",
          "legendFormat": "p95"
        },
        {
          "expr": "histogram_quantile(0.99, sum by (le)(rate(edge_http_request_duration_seconds_bucket[$window])))",
          "refId": "D",
          "legendFormat": "p99"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "x": 12, "y": 4, "w": 12, "h": 8 }
    },
    {
      "id": 9,
      "type": "timeseries",
      "title": "HTTP Status Codes",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (status)(rate(edge_http_requests_total[$window]))",
          "refId": "A",
          "legendFormat": "{{status}}"
        }
      ],
      "gridPos": { "x": 0, "y": 12, "w": 8, "h": 8 }
    },
    {
      "id": 10,
      "type": "timeseries",
      "title": "Cache Hits vs Misses",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "sum by (cache_type)(rate(edge_cache_hits_total[$window]))",
          "refId": "A",
          "legendFormat": "hits - {{cache_type}}"
        },
        {
          "expr": "sum by (cache_type)(rate(edge_cache_misses_total[$window]))",
          "refId": "B",
          "legendFormat": "misses - {{cache_type}}"
        }
      ],
      "gridPos": { "x": 8, "y": 12, "w": 8, "h": 8 }
    },
    {
      "id": 11,
      "type": "timeseries",
      "title": "Cache Size",
      "datasource": "Prometheus",
      "targets": [{ "expr": "edge_cache_size", "refId": "A", "legendFormat": "{{cache_type}}" }],
      "gridPos": { "x": 16, "y": 12, "w": 8, "h": 8 }
    },
    {
      "id": 12,
      "type": "timeseries",
      "title": "Memory Usage",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "process_resident_memory_bytes{job=\"gatrix-edge\"}",
          "refId": "A",
          "legendFormat": "RSS"
        },
        {
          "expr": "process_heap_bytes{job=\"gatrix-edge\"}",
          "refId": "B",
          "legendFormat": "Heap Total"
        },
        {
          "expr": "nodejs_heap_size_used_bytes{job=\"gatrix-edge\"}",
          "refId": "C",
          "legendFormat": "Heap Used"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "bytes" } },
      "gridPos": { "x": 0, "y": 20, "w": 12, "h": 8 }
    },
    {
      "id": 13,
      "type": "timeseries",
      "title": "CPU Usage",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "rate(process_cpu_user_seconds_total{job=\"gatrix-edge\"}[$window])",
          "refId": "A",
          "legendFormat": "User"
        },
        {
          "expr": "rate(process_cpu_system_seconds_total{job=\"gatrix-edge\"}[$window])",
          "refId": "B",
          "legendFormat": "System"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "percentunit" } },
      "gridPos": { "x": 12, "y": 20, "w": 12, "h": 8 }
    },
    {
      "id": 14,
      "type": "timeseries",
      "title": "Event Loop Lag",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "nodejs_eventloop_lag_seconds{job=\"gatrix-edge\"}",
          "refId": "A",
          "legendFormat": "Lag"
        },
        {
          "expr": "nodejs_eventloop_lag_p99_seconds{job=\"gatrix-edge\"}",
          "refId": "B",
          "legendFormat": "P99"
        }
      ],
      "fieldConfig": { "defaults": { "unit": "s" } },
      "gridPos": { "x": 0, "y": 28, "w": 12, "h": 8 }
    },
    {
      "id": 15,
      "type": "timeseries",
      "title": "Active Handles & Requests",
      "datasource": "Prometheus",
      "targets": [
        {
          "expr": "nodejs_active_handles_total{job=\"gatrix-edge\"}",
          "refId": "A",
          "legendFormat": "Active Handles"
        },
        {
          "expr": "nodejs_active_requests_total{job=\"gatrix-edge\"}",
          "refId": "B",
          "legendFormat": "Active Requests"
        }
      ],
      "gridPos": { "x": 12, "y": 28, "w": 12, "h": 8 }
    }
  ]
}
